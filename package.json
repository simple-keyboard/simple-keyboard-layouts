{
  "name": "simple-keyboard-layouts",
  "version": "3.0.206",
  "description": "Layouts module for simple-keyboard",
  "main": "build/index.js",
  "types": "build/types/index.d.ts",
  "scripts": {
    "start": "webpack serve --config webpack.config.demo.js",
    "build": "webpack && tsc && npm run buildLayouts",
    "buildLayouts": "tsc --p tsconfig.layouts.json",
    "test": "jest --silent",
    "coverage": "npm run test -- --coverage",
    "prepare": "npm run build",
    "trypublish": "npm publish || true"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hodgef/simple-keyboard-layouts"
  },
  "author": "Francisco Hodge <hello@franciscohodge.com> (https://github.com/hodgef)",
  "bugs": {
    "url": "https://github.com/hodgef/simple-keyboard-layouts/issues"
  },
  "homepage": "https://hodgef.com/simple-keyboard/modules/simple-keyboard-layouts/",
  "keywords": [
    "javascript",
    "es6",
    "digital",
    "keyboard",
    "onscreen",
    "virtual",
    "screen-keyboard",
    "component",
    "virtual-keyboard",
    "touchscreen",
    "touch-screen",
    "layout",
    "keyboard-layout",
    "kiosk",
    "osk",
    "js"
  ],
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.15.7",
    "@babel/core": "^7.15.8",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/plugin-transform-typescript": "^7.15.8",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.15.8",
    "@types/jest": "^27.0.1",
    "@typescript-eslint/eslint-plugin": "^4.31.2",
    "@typescript-eslint/parser": "^4.33.0",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.2.3",
    "babel-preset-minify": "^0.5.0",
    "css-loader": "^6.4.0",
    "eslint": "^7.32.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.4.0",
    "jest": "^26.6.3",
    "mini-css-extract-plugin": "^2.4.2",
    "optimize-css-assets-webpack-plugin": "^6.0.1",
    "prettier": "^2.4.1",
    "prettier-webpack-plugin": "^1.2.0",
    "simple-keyboard": "3.3.7",
    "style-loader": "^3.2.1",
    "terser-webpack-plugin": "^5.2.4",
    "typescript": "^4.4.4",
    "uglify-es": "^3.3.9",
    "url-loader": "^4.1.1",
    "webpack": "^5.40.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "4.3.1"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.d.ts",
      "!src/lib/index.js",
      "!src/demo/index.js",
      "!src/utils/**",
      "!src/**/*.d.ts",
      "!**/tests/**"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,jsx,ts,tsx}",
      "<rootDir>/src/**/*.{spec,test}.{js,jsx,ts,tsx}"
    ],
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|ts|tsx)$",
      "^.+\\.module\\.(css|sass|scss)$"
    ],
    "modulePaths": [],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/scripts/testMock.js",
      "\\.(css|less)$": "<rootDir>/scripts/testMock.js"
    },
    "moduleFileExtensions": [
      "web.js",
      "js",
      "web.ts",
      "ts",
      "web.tsx",
      "tsx",
      "json",
      "web.jsx",
      "jsx",
      "node"
    ]
  }
}
